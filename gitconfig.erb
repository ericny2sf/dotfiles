[user]
	name = Javier Julio
	email = <%= prompt_for_value("email") %>
[credential]
  helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
[alias]
  # Show list of all aliases in this file.
  a = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  b = branch
  ci = commit
  co = checkout
  cgl = config --global --list
  f = fetch
  fo = fetch origin
  go = checkout -B
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  p = push
  po = push origin
  pos = push origin staging
  pom = push origin master
  phm = push heroku master
  r = rebase
  rb = rebase
  s = status
  todos = !"git ls-files | xargs match-todos | awk -F: '{ print $1,$2; print $3,$4; print $5}' | grcat conf.todos"
  # Undo the last commit but keep changes intact.
  uci = reset --soft HEAD^
